{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Inscrire un participant
{% endblock %}

{% block body %}
<div class="register-container"
    <div class="container">
        <div class="row">
            <div class="col-sm">

            </div>
            <div class="col-sm">
                <h1>Inscrire un participant</h1>
                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.nom) }}
                {{ form_row(registrationForm.prenom) }}
                {{ form_row(registrationForm.telephone) }}
                {{ form_row(registrationForm.campus) }}
                <div class="btn-register-container">
                    <div class="row">
                        <div class="col-sm">
                            <button type="submit" class="btn btn-register">Cr√©er le participant</button>
                            {{ form_end(registrationForm) }}
                        </div>
                        <div class="col-sm">
                            <a href="{{ path('main_home') }}">
                                <button class="btn btn-register">Annuler</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm">
            </div>
        </div>
    </div>
</div>



{% endblock %}
