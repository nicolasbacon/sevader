{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Inscrire un participant
{% endblock %}

{% block body %}
    <h1>Inscrire un participant</h1>

    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.plainPassword, {
        label: 'Password'
    }) }}
    {{ form_row(registrationForm.nom) }}
    {{ form_row(registrationForm.prenom) }}
    {{ form_row(registrationForm.telephone) }}
    {{ form_row(registrationForm.campus) }}
    <button type="submit" class="btn">Cr√©er le participant</button>
    {{ form_end(registrationForm) }}
    <a href="{{ path('main_home') }}">
        <button>Annuler</button>
    </a>
{% endblock %}
