{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container" style="background-color: red">
        <div class="row">
            <div class="col-sm">

            </div>
            <div class="col-sm">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}


                    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                    <label for="inputEmailOrUsername">Email or Username</label>
                    <input type="text" value="{{ last_username }}" name="email_or_username" id="inputEmailOrUsername"
                           class="form-control" required autofocus>
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control"
                           autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">


                    {#        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality. #}
                    {#        See https://symfony.com/doc/current/security/remember_me.html #}

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div>
                    <a href="{{ url('app_forgot_password_request') }}">Reset Password</a>


                    <button class="btn btn-lg btn-primary yellow-btn" type="submit">
                        Sign in
                    </button>
                </form>
            </div>
            <div class="col-sm">

            </div>
        </div>
    </div>
{% endblock %}
