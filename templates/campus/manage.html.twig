{% extends 'base.html.twig' %}

{% block body %}


    <div class="container manage-container">
        <div class="row">
            <div class="col-sm-2">

            </div>
            <div class="col-sm-6 text-center">

                <h2 class="text-center">GÃ©rer les campus </h2>
                <h3 class="text-center">Filtrer les campus</h3>
                {{ form_start(filterForm) }}
                {{ form_row(filterForm.search) }}
                <br>
                {{ form_row(filterForm.rechercher) }}
                <br>
                {{ form_end(filterForm) }}
            </div>
            <div class="col-sm-2">

            </div>
        </div>
    </div>

    <div class="container manage-container resultat-recherche">
        <div class="row text-center">


            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th scope="col">Campus</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for campus in listeCampus|sortByField('nom') %}
                    <tr>
                        <th scope="row">{{ campus.nom|title }}</th>
                        <td>

                            <button class="ps-1 btn btn-outline-secondary "><a class="ps-1"
                                                                               href="{{ path('campus_edit',{'id': campus.id}) }}">Modifier</a>
                            </button>
                            <button class="ps-1 btn btn-outline-secondary "><a class="ps-1"
                                                                               href="{{ path('campus_delete',{'id': campus.id}) }}">Supprimer</a>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                <tr>
                    {{ form_start(campusForm) }}
                    <td>
                        {{ form_row(campusForm.nom) }}
                    </td>
                    <td>
                        <button class="btn btn-main">Ajouter</button>
                    </td>
                    {{ form_end(campusForm) }}
                </tr>
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}

{% block title %}
    {{ parent() }} | Gestion des Campus
{% endblock %}