{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="text-center title-resultat-recherche">Gestion des participants</h2>

    <div class="container resultat-recherche">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-6">
                <div class="href">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Nom</th>
                            <th scope="col">Prenom</th>
                            <th scope="col">Pseudo</th>
                            <th scope="col">Email</th>
                            <th scope="col">Téléphone</th>
                            <th scope="col">Campus</th>
                            <th scope="col">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for participant in participants %}
                            <tr>
                                <th scope="row">{{ participant.nom|capitalize }}</th>
                                <td>{{ participant.prenom|capitalize }}</td>
                                <td>{{ participant.pseudo }}</td>
                                <td>{{ participant.email }}</td>
                                <td>{{ participant.telephone }}</td>
                                <td>{{ participant.campus.nom|capitalize }}</td>
                                <td>
                                    {% if participant.actif %}
                                        <a href="{{ path('participant_activation', {'id': participant.id }) }}">Désactiver</a>
                                    {% else %}
                                        <a href="{{ path('participant_activation', {'id': participant.id }) }}">Activer</a>
                                    {% endif %}
                                    <a href="{{ path('participant_delete', {'id': participant.id }) }}">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-2"></div>

        </div>
    </div>

{% endblock %}

{% block title %}
    {{ parent() }} | Gérer les participants
{% endblock %}

